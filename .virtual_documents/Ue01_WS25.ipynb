%matplotlib widget
import numpy as np
import matplotlib.pyplot as plt

L = 1
D = 1
M = 1

T_l = 20 # linke Randbedingung
T_r = 100 # rechte Randbedingung

N = 200 # Anzahl der r√§umlichen Intervale
dx = L/N
alpha = 0.3
dt = alpha * dx**2 / D

# Anfangsverteilung
u_0 = np.zeros(N+1)
u_0[int(N/4)] = M/dx
u_0[0] = T_l
u_0[-1] = T_r

t_end = 0.003
t = 0.0
u = u_0.copy()

while t < t_end:
    u[1:N] = (1 - 2*alpha)*u[1:N] + alpha*(u[0:N-1] + u[2:])
    t += dt

plt.figure(1)
plt.clf()
plt.plot(u_0)
plt.title("Anfangsverteilung")
plt.show();

plt.figure(2)
plt.clf()
xs = np.linspace(0, L, N+1)
plt.plot(xs, u)
plt.title(f"Verteilung bei {t=}")
